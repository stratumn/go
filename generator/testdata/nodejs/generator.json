{
  "name": "nodejs",
  "version": "x.x.x",
  "description": "A basic NodeJS template",
  "author": "Stratumn",
  "license": "MIT",
  "variables": {
    "os": "{{.os}}"
  },
  "inputs": {
    "name": {
      "type": "string",
      "prompt": "Project name:",
      "default": "{{.dir}}",
      "format": ".+"
    },
    "description": {
      "type": "string",
      "prompt": "Project description:",
      "default": "{{.description}}"
    },
    "author": {
      "type": "string",
      "prompt": "Your name:",
      "default": "{{.author}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "year": {
      "type": "string",
      "prompt": "Year:",
      "default": "{{now `2006`}}",
      "format": ".+"
    },
    "license": {
      "type": "select:string",
      "prompt": "License:",
      "options": [
        {
          "value": "mit",
          "text": "MIT"
        },
        {
          "value": "bsd",
          "text": "BSD"
        }
      ],
      "default": "mit"
    },
    "process": {
      "type": "slice:string",
      "prompt": "List of process names:",
      "default": "{{.process}}",
      "format": "^[a-zA-Z].*$"
    }
  },
  "priorities": ["README.md", "LICENSE"]
}
