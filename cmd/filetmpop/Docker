USER root

ENV DATA_ROOT /data/tendermint

RUN mkdir -p $DATA_ROOT \
  && chown -R stratumn:stratumn $DATA_ROOT

ENV FILE_STORE /var/stratumn/filestore

RUN mkdir -p $FILE_STORE \
  && chown stratumn:stratumn $FILE_STORE

USER stratumn

ENV TMROOT $DATA_ROOT

VOLUME $FILE_STORE
VOLUME $DATA_ROOT

EXPOSE 46656 46657 
